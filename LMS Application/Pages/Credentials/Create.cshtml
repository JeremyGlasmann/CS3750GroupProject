@page
@model RegisterPage.Pages.Credentials.CreateModel

@{
    ViewData["Title"] = "Create";
}

<head>
    <link rel="stylesheet" href="~/css/courseStyle.css" />
</head>

<style>
    .navbar{display: none;}
    h1{margin-top: 25px;}
    .form-group{margin-top: 5px


</style>

<h1 class="text-center my-4">Create Account</h1>

<hr />
<div class="card col-md-8 mx-auto">
<div class="row">
    <div class="col-md-8 mx-auto">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                <div class="mb-3">
                    <label asp-for="register.username" class="form-label">Username</label>
                    <input asp-for="register.username" class="form-control" placeholder="Enter username" />
                    <span asp-validation-for="register.username" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="register.password" class="form-label">Password</label>
                    <input asp-for="register.password" type="password" class="form-control" placeholder="Enter password" />
                    <span asp-validation-for="register.password" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="register.confirmpassword" class="form-label">Confirm Password</label>
                    <input asp-for="register.confirmpassword" type="password" class="form-control" placeholder="Confirm password" />
                    <span asp-validation-for="register.confirmpassword" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="register.firstname" class="form-label">First Name</label>
                    <input asp-for="register.firstname" class="form-control" placeholder="Enter first name" />
                    <span asp-validation-for="register.firstname" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="register.lastname" class="form-label">Last Name</label>
                    <input asp-for="register.lastname" class="form-control" placeholder="Enter last name" />
                    <span asp-validation-for="register.lastname" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="register.dob" class="form-label">Date of Birth</label>
                    <input asp-for="register.dob" type="date" class="form-control" />
                    <span asp-validation-for="register.dob" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label class="form-label">Role</label>
                    <div class="form-check">
                        <input type="radio" asp-for="SelectedRole" value="Student" class="form-check-input" id="roleStudent" />
                        <label class="form-check-label" for="roleStudent">Student</label>
                    </div>
                    <div class="form-check">
                        <input type="radio" asp-for="SelectedRole" value="Teacher" class="form-check-input" id="roleTeacher" />
                        <label class="form-check-label" for="roleTeacher">Teacher</label>
                    </div>
                    <span asp-validation-for="SelectedRole" class="text-danger"></span>
                </div>
                <div class="d-grid gap-2">
                    <button type="submit" class="btn btn-custom btn-edit">Create</button>
                    <a asp-page="/Index" class="btn btn-custom btn-edit">Back to Login</a>
                </div>
                <input type="hidden" asp-for="register.role" value="Teacher" />
            </form>
    </div>
</div>


</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
