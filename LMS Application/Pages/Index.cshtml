@page
@model IndexModel
@{
    Layout = "_LayoutIndex";
    ViewData["Title"] = "Home page";
}
<style>
    .BottomButton{margin-top: 10px;}
    .addPad{padding: 15px;
    border: ;}
    body{
    background-image: url(/Resources/backgroundImage.png);
    background-color: #d2e6f6;
    background-size:cover;
    background-repeat: no-repeat;
    margin: 0;
    }
</style>

<div class="text-center addPad">
    <h1>Log In</h1>

    <form method="post">
        <div class="form-group">
            <label for="email">Email</label>
            @Html.TextBoxFor(m => m.Username, new { @class = "form-control", placeholder = "Email", style = "width: 300px; height: 40px; margin: 10px auto;" })
        </div>
        <div class="form-group">
            <label for="password">Password</label>
            @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Password", style = "width: 300px; height: 40px; margin: 10px auto;" })
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary">Login</button>
        </div>
    </form>

    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="alert alert-danger">@Model.ErrorMessage</div>
    }

    <div class="form-group">
        <a href="@Url.Page("/Credentials/create")" class="btn btn-secondary BottomButton">Sign Up</a>
    </div>

</div>
