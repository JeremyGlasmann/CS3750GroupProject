        </dd>
        <dt class="col-sm-4">
            @Html.DisplayNameFor(model => model.Classes.courseSize)
        </dt>
        <dd class="col-sm-8">
            @Html.DisplayFor(model => model.Classes.courseSize)
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="Classes.Id" />
        <input type="submit" value="Confirm Deletion" class="btn btn-custom btn-delete" /> 
        <a asp-page="./Index" class="btn btn-custom btn-edit">Return to Course</a>
    </form>
</div>
</div>
