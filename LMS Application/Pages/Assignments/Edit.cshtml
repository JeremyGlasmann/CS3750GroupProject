@page "{action?}"
@model RegisterPage.Pages.Assignments.EditModel

@{
    ViewData["Title"] = "Edit";
    var currentAction = RouteData.Values["action"]?.ToString() ?? "Edit";
}

<style>
	.StudentView{display: none;}
</style>

<!--Styling for this page-->
<style>
    .card {
        margin: 30px auto;
        width: 80%;
    }

    .form-group {
        margin-bottom: 1.5rem;
    }

    .form-group label {
        font-weight: bold;
        margin-bottom: 8px;
        font-size: 1.1rem;
    }

    .input-group {
        margin-bottom: 1rem;
    }

    input.form-control, select.form-control {
        border-radius: 8px;
        border: 1px solid #ddd;
        padding: 10px;
      
    }
</style>

<!--external style sheet-->
<link rel="stylesheet" href="~/css/courseStyle.css" />


<!-- Breadcrumb Navigation -->
<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-page="/dashboard">Home</a></li>
        <li class="breadcrumb-item">
            <a asp-page="/Course" asp-route-id="@Model.Assignments.classID">
                @Html.DisplayFor(model => model.Assignments.courseNum)
            </a>
        </li>
        <li class="breadcrumb-item active" aria-current="page">
            @currentAction
        </li>
    </ol>
</nav>

<!--Edit assignment title-->
<h1>Edit @Html.DisplayFor(model => model.Assignments.title)</h1>

<!--Display assignment details-->
<div class="card">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="selectedClassID" asp-for="Assignments.courseNum"/>
                <input type="hidden" asp-for="Assignments.ID"/>
                <div class="form-group">
                    <label asp-for="Assignments.title" class="control-label"></label>
                    <input asp-for="Assignments.title" class="form-control" />
                    <span asp-validation-for="Assignments.title" class="text-danger"></span>
                </div>        
                <div class="form-group">
                    <label asp-for="Assignments.description" class="control-label"></label>
                    <input asp-for="Assignments.description" class="form-control" />
                    <span asp-validation-for="Assignments.description" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Assignments.dueDate" class="control-label"></label>
                    <input asp-for="Assignments.dueDate" class="form-control" />
                    <span asp-validation-for="Assignments.dueDate" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Assignments.maxGrade" class="control-label"></label>
                    <input asp-for="Assignments.maxGrade" class="form-control" />
                    <span asp-validation-for="Assignments.maxGrade" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Assignments.submissionType" class="control-label"></label>
                    <select name="submitType" class="form-control">
                        <option value="File">File</option>
                        <option value="Text">Text</option>
                    </select>
                </div>   
                <div class="actions">
                    <div class="form-group">
                        <input type="submit" value="Save" class="btn btn-custom btn-edit" />
                    </div>
                    <a asp-page="/Course" asp-route-id="@Model.Assignments.classID" class="btn btn-custom btn-submit">Return to Course</a>
                </div>
            </form>
            
               
        </div>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
