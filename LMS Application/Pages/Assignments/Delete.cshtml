@page "{action?}"
@model RegisterPage.Pages.Assignments.DeleteModel

@{
    ViewData["Title"] = "Delete";
    var currentAction = RouteData.Values["action"]?.ToString() ?? "Delete";
}

<!--Only Displays Teachers Nav-->
<style>
	.StudentView{display: none;}
</style>

<!--Styling for this page-->
<style>
    .card {
        padding: 30px;
        border-radius: 8px;
        box-shadow: 0 2px 12px rgba(0, 0, 0, 0.1);
        background-color: #fff;
        margin-top: 30px;
    }

        .card .row dt {
            font-size: 1.6rem;
            font-weight: bold;
            color: #333;
            padding-right: 15px;
            text-align: left;
        }

        .card .row dd {
            font-size: 1.5rem;
            padding-left: 15px;
            color: #555;
            margin-bottom: 18px;
        }

            .card .row dd: last-child {
                border-bottom: none;
                margin-bottom: 0;
            }

    .actions a {
        text-decoration: none;
    }

    /* Style for h3 headings */
    h3 {
        font-size: 1.6rem;
        font-weight: bold;
        color: #555;
        margin: 20px 0;
    }



        h3.text-danger {
            font-size: 1.75rem; /* Increase the font size slightly to make it more prominent */
            font-weight: 600; /* Make it slightly bolder for emphasis */
            color: #e74c3c; /* A vibrant red color for danger/warning */
            margin: 20px 0; /* Add margin for spacing */
            text-align: center;
        }

    .card h3 {
        font-size: 1.75rem; 
        font-weight: bold;
    }



</style>

<link rel="stylesheet" href="~/css/courseStyle.css" />

<!-- Breadcrumb Navigation -->
<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-page="/dashboard">Home</a></li>
        <li class="breadcrumb-item">
            <a asp-page="/Course" asp-route-id="@Model.Assignments.classID">
                @Html.DisplayFor(model => model.Assignments.courseNum)
            </a>
        </li>
        <li class="breadcrumb-item active" aria-current="page">
            @currentAction
        </li>
    </ol>
</nav>

<!--Title -->
<h1>Delete @Html.DisplayFor(model => model.Assignments.title)</h1>


<div class="card">
    <h3 class="text-danger">Are you sure you want to delete this assignment?</h3>

    <h3>@Html.DisplayFor(model => model.Assignments.title) Details</h3>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Name
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Assignments.title)
        </dd>
        <dt class="col-sm-2">
            Course #
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Assignments.courseNum)
        </dd>
        <dt class="col-sm-2">
            Description
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Assignments.description)
        </dd>
        <dt class="col-sm-2">
            Due
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Assignments.dueDate)
        </dd>
        <dt class="col-sm-2">
            Max Grade
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Assignments.maxGrade)
        </dd>
        <dt class="col-sm-2">
            Class
        </dt>
        <dd class="col-sm-10">
            @Model.CourseName
        </dd>
    </dl>
    
    <div class="actions">
        <form method="post">
            <input type="hidden" asp-for="Assignments.ID" />
            <input type="submit" value="Confirm Deletion" class="btn btn-custom btn-delete" /> 
            <a asp-page="/Course" asp-route-id="@Model.Assignments.classID" class="btn btn-custom btn-submit">Return to Course</a>
        </form>
    </div>
</div>
